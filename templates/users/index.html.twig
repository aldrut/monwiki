{% extends 'base.html.twig' %}

{% block title %}
	{{titreNewsletter}}
{% endblock %}

{% block content %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<div class="container">
			<div class="row">
				<div class="col text-white bg-dark">
					<i class="bi bi-newspaper"></i>S'inscrire
                </div>
			</div>
			<div class="row">
				<div class="col bgInscription text-white">Renseignements obligatoires</div>
			</div>
			<form action="" method="post">
                {# Section Name #}
				    <div class="row mt-2">
                        <div class="col-4 "><label class="inscription" for="name">{{lblName}}</div>
					    <div class="col"><input type="text" id="name" name="name" onkeypress="return (event.charCode >=97 && event.charCode <=122)"></div>
				    </div>
                {# Section firstname #}
				    <div class="row mt-2 boder border-top">
					    <div class="col-4 "><label class="inscription" for="firstname">{{lblFirstName}}</div>
					    <div class="col"><input type="text" id="firstname" name="firstname" onkeypress="return (event.charCode >=97 && event.charCode <=122)"></div>
				    </div>
                {# Section Mail #}
                    <div class="row mt-2 boder border-top">
                        <div class="col-4"><label class="inscription" for="mail">{{lblMail}}</div>
                        <div class="col"><input type="email" id="mail" name="mail"></div>
                    </div>
                {# Section Mail 2  #}
                    <div class="row mt-2 boder border-top">
                        <div class="col-4"><label class="inscription" for="mail2">{{lblMail2}}</div>
                        <div class="col"><input type="email" id="mail2" name="mail2"></div>
                    </div>
                {# Section PWD #}
                    <div class="row mt-2 boder border-top">
                        <div class="col-4"><label class="inscription" for="pass">{{lblPwd}}</div>
                        <div class="col"><input type="password" id="pass" name="pass"></div>
                    </div>
                {# Section PWD 2 #}
                    <div class="row mt-2 boder border-top">
                        <div class="col-4"><label class="inscription" for="pass2">{{lblPwd2}}</div>
                        <div class="col"><input type="password" id="pass2" name="pass2"></div>
                    </div>
                {# SECTION PHONE #}
                    <div class="row mt-2 boder border-top">
                        <div class="col-4"><label class="inscription" for="phone">{{lblPhone}}</div>
                        <div class="col"><input type="text" id="phone" name="phone" onkeypress="return event.charCode >= 8 && event.charCode <= 57"></div>
                    </div>
                {# SECTION NBQUESTION CACHEE #}
                    <div class="row mt-2 d-none boder border-top">
                        <div class="col-4"><label class="inscription" for="question">{{lblNbQuestion}}</div>
                        <div class="col"><input type="number" id="question" name="question" value="0" min='0'></div>
                    </div>
                {# SECTION NBRESPONSE CACHEE #}
                    <div class="row mt-2 d-none boder border-top">
                        <div class="col-4"><label class="inscription" for="response">{{lblNbResponse}}</div>
                        <div class="col"><input type="number" id="response" name="response" value="0" min='0'></div>
                    </div>
                {# SECTION CHECKBOX AUTORISATION #}
                    <div class="row">
                        <div class="col">
                            <input type="checkbox" id="autorisation" name="autorisation"><label for="autorisation">{{cbRegle}}</label>
                        </div>
                    </div>
                {# SECTION BOUTON VALIDATION & RESET #}

                    <div class="row">
                        <div class="col d-grid gap-2">
                            <input class="btn btn-outline-primary" type="submit" value={{btnTxtInscription}}>
                            <input class="btn btn-outline-danger" type="submit" value={{btnTxtReset}}>
                        </div>
                    </div>
            </form>
		</div>                              
	</div>
             
{% endblock %}
