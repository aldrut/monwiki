{% extends 'base.html.twig' %}

{% block title %} {{titreAccueil ?? 'Accueil'}}
{% endblock %}

{% block content %}
<div class="container-fluid ">
    <div class="row">
        <div class="col-2 nopad">
            <ul class="nav flex-column bg-menu p-2">
            {% for theme in themes %}
                <li class="nav-item">
                    <a class="nav-link active text-white" aria-current="page" href="#">{{theme.name}}</a>
                <li>
            {% endfor %}
            </ul>
        </div>
        <div class="col-10">
            <div class="row">
                {% for articles in article %}
                    <div class="col-6 pt-3 Pr">
                        <div class="card">
                            <div class="card-body">
                                <h2 class="card-title">{{articles.title}}</h2>
                                <p class="card-text">{{articles.content|slice(0,250) ~ '...'}}</p>
                                <p class="card-text"><small class="text-muted">{{articles.getPostDateString()}}</small></p>
                                <a class="btn btn-outline-secondary" href="/articles/{{articles.id}}/{{articles.title|slice(0,100)}}">Lire l'article</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>  
        </div>
    </div>
</div>

{% endblock %}
